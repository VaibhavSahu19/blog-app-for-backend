<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head') %> 
<body>
    <%- include('includes/header') %> 
    <main>
        <% if(!posts.length){ %>
            <h3>Hello <%= user.userName %>, You do not have any posts yet!!</h3>
        <% } else { %>
            <h3>Hello <%= user.userName %>, Here are your posts!!</h3>
        <% } %>
        
        <ul>
            <% posts.forEach((post) => { %>
                <li>
                    <a href="post/<%= post.id %>"><%= post.title %></a>
                    on <%= new Date(post.createdDate).getDate() %>/<%= new Date(post.createdDate).getMonth() + 1 %>/<%= new Date(post.createdDate).getFullYear() %>
                </li>
            <% })%>
        </ul>
    </main>
    <%- include('includes/footer') %> 
</body>
</html>