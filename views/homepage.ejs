<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h2>
            <a href="/">Our wonderfull App</a>
        </h2>
        <nav>
            <a href="/login">Log in</a>
        </nav>
    </header>
    <main>
        <form action="/register" method="POST">
            <% errors.forEach((error) => { %>
                <p class="notice"><%= error %></p>
            <% }) %>
            <fieldset>
                <legend>Create an account</legend>
                <label for="username">
                    <small>
                        Username
                    </small>
                </label>
                <input type="text" placeholder="Enter Username" id="username" name="username" autocomplete="off">
    
                <label for="password">
                    <small>
                        Password
                    </small>
                </label>
                <input type="password" placeholder="Enter Password" id="password" name="password" autocomplete="off">
                <br>
    
                <button>Sign Up</button>
            </fieldset>
        </form>
    </main>
    <footer>
        <small>
            &copy; Our wonderfull app
        </small>
    </footer>
</body>
</html>